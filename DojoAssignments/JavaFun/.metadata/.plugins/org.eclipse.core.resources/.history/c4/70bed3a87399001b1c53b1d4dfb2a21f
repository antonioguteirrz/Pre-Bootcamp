package CalculatorPartI;

public class Calculator {
	protected double operandOne;
	protected String operation;
	protected double operandtwo;
	protected double results;
	
	Calculator(){
		 
	}
	protected double getOperandOne() {
		return operandOne;
	}
	protected void setOperandOne(double operandOne) {
		this.operandOne = operandOne;
	}
	protected String getOperation() {
		return operation;
	}
	protected void setOperation(String operation) {
		this.operation = operation;
	}
	protected double getOperandtwo() {
		return operandtwo;
	}
	protected void setOperandtwo(double operandtwo) {
		this.operandtwo = operandtwo;
	}
	public void performOperation() {
		if(operation == "+") {
			results =  operandOne  + operandtwo;
		}
		 
	}
	protected double getResults() {
		return results;
	}
}
